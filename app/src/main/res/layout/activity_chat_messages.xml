<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:appContext=".Menu.MessagesFragment.ChatMessagesActivity.ChatMessagesActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChatMessagesId"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextChatMessageId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonSendMessageId"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/accept_offer_mdpi_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/editTextChatMessageId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/editTextChatMessageId" />

    <EditText
        android:id="@+id/editTextChatMessageId"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorButtonNormal"
        android:ems="10"
        android:hint="@string/type_message_here"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonSendMessageId"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>